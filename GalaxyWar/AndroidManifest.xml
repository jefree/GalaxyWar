<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="dev.jet.android.galaxywar"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="8" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_ship"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity android:name="dev.jet.android.galaxywar.main.AndroidLauncher" android:screenOrientation="landscape" android:theme="@style/AppTheme" android:launchMode="standard" android:enabled="true">
             <intent-filter >
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
